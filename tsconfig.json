{
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"resolveJsonModule": true,
		"strict": true,
		"noImplicitAny": false,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"lib": [
			"ESNext"
		],
		"typeRoots": [
			"typings",
			"node_modules/@types"
		],
		"sourceMap": true,
		"outDir": "build"
	},
	"exclude": [
		"node_modules",
		"build"
	],
	"typeAcquisition": {
		"enable": true
	}
}
