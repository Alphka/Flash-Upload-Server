{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ESNext",
		"moduleResolution": "Bundler",
		"lib": [
			"ESNext",
			"DOM",
			"DOM.Iterable"
		],
		"typeRoots": [
			"node_modules/@types",
			"typings"
		],
		"allowJs": true,
		"strict": true,
		"incremental": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"plugins": [
			{ "name": "next" }
		],
		"paths": {
			"@components/*": ["./src/app/components/*"],
			"@api/*": ["./src/app/api/*"],
			"@helpers/*": ["./src/helpers/*", "./src/app/helpers/*"],
			"@lib/*": ["./src/lib/*"],
			"@models/*": ["./src/models/*"],
			"@app/*": ["./src/app/*"],
			"@typings": ["./typings/index.d.ts"],
			"@typings/*": ["./typings/*"]
		},
		"noEmit": true
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"database"
	]
}
