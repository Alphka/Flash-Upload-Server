if isWatching
	script(src="/socket.io/socket.io.js")
	script.
		const socket = io()

		function Reload(){
			console.log("Reloading browser")
			document.location.reload()
		}

		socket.on("browserReload", Reload)

		socket.on("disconnect", () => {
			console.log("Disconnected")
			socket.on("connect", Reload)
		})
